<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

<!-- External page template -->

	<definition name="pageExt" templateExpression="/WEB-INF/jsp/page.jsp">
		
	</definition>
		
	<definition name="page" templateExpression="/WEB-INF/jsp/page.jsp">
		<put-attribute name="header" expression="/WEB-INF/jsp/header.jsp" />
		<put-attribute name="footer" expression="/WEB-INF/jsp/footer.jsp" />
	</definition>
	
	<definition name="home" extends="page">
	    <put-attribute name="content" value="/WEB-INF/jsp/home.jsp" />
	</definition>
</tiles-definitions>
